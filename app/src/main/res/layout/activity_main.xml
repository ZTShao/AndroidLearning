<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" tools:context=".MainActivity">

    <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邵小皮学习测试App"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"/>

    <Button
            android:id="@+id/button_webview_test"
            android:text="Android网络实践"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/textview_title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"/>

    <Button
            android:id="@+id/button_json_test"
            android:text="Json实践"
            android:layout_width="150dp"
            android:background="@color/white"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_webview_test"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"/>

    <Button
            android:id="@+id/button_sqlite_test"
            android:text="SQLiteDB实践"
            android:layout_width="150dp"
            android:background="@color/white"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_json_test"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"/>

    <Button
            android:id="@+id/button_glide_test"
            android:text="Glide实践"
            android:layout_width="150dp"
            android:background="@color/white"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_sqlite_test"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"/>

    <ImageView
            android:id="@+id/imageview_pic1"
            app:layout_constraintRight_toLeftOf="@+id/imageview_pic2"
            android:layout_marginRight="3dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <ImageView
            android:id="@+id/imageview_pic2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    <ImageView
            android:id="@+id/imageview_pic3"
            app:layout_constraintLeft_toRightOf="@+id/imageview_pic2"
            android:layout_marginLeft="3dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>